{
  "compilerOptions": {
    "module": "NodeNext",                
    "moduleResolution": "NodeNext",       
    "target": "ESNext",                   
    "lib": ["ESNext"],                    
    "rootDir": "./src",                   
    "outDir": "./dist",                   
    "strict": true,                       
    "esModuleInterop": true,              
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,                 
    "resolveJsonModule": true,            
    "allowSyntheticDefaultImports": true, 
    "noImplicitAny": false,               
    "noUnusedLocals": true,               
    "noUnusedParameters": true            
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
